<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:id="@+id/textView"
            android:text="家具设置"/>
    <Button
            android:text="门锁开关"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/door" android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" android:layout_below="@+id/textView"/>
    <Button
            android:text="大灯切换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bigLight"
            android:layout_marginTop="10dp" android:layout_below="@+id/door" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:id="@+id/bigLS"
            android:layout_marginTop="10dp" android:layout_below="@+id/bigLight" android:text="大灯设置"/>
    <Button
            android:text="白灯切换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whiteLight" android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" android:layout_below="@+id/bigLS"/>
    <Button
            android:text="风扇切换"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fan"
            android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
            android:layout_below="@+id/whiteLight"/>
</RelativeLayout>